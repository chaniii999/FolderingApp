{
  "name": "Foldering",
  "version": "1.4.1",
  "description": "폴더링 + 텍스트 메모 로컬 데스크톱 앱",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron:build\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron:build": "tsc -p electron --watch",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p electron",
    "build:app": "npm run build && electron-builder",
    "build:app:win": "npm run build && electron-builder --win --publish never",
    "build:app:mac": "npm run build && npm run rebuild && electron-builder --mac --publish never",
    "build:app:dir": "npm run build && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps || true",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "preview": "vite preview",
    "clean": "rimraf dist dist-electron release",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "electron",
    "react",
    "foldering",
    "notes"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "remark": "^15.0.1",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.0",
    "remark-html": "^16.0.1"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.0.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jsdom": "^23.0.0",
    "postcss": "^8.4.32",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.foldering.app",
    "productName": "Foldering",
    "icon": "FolderingIcon.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json",
      "!**/*.{md,ts,tsx,map,js.map,css.map}",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,LICENSE,LICENSE.txt,license.txt}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples,docs,doc,*.test.js,*.spec.js}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/node_modules/**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!**/node_modules/**/package-lock.json",
      "!**/node_modules/**/yarn.lock",
      "!**/node_modules/**/.npmignore",
      "!**/node_modules/**/.gitignore",
      "!**/node_modules/**/.gitattributes",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!**/config/dev.json",
      "!**/build/README.md"
    ],
    "extraFiles": [],
    "extraResources": [],
    "asar": true,
    "electronLanguages": [
      "ko",
      "en"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "compression": "maximum",
    "fileAssociations": [],
    "removePackageScripts": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "FolderingIcon.png",
      "sign": null,
      "signDlls": false,
      "artifactName": "${productName} Setup ${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "differentialPackage": false,
      "warningsAsErrors": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "FolderingIcon.png",
      "background": null,
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false
  }
}
