{
  "name": "foldering-app",
  "version": "1.0.0",
  "description": "폴더링 + 텍스트 메모 로컬 데스크톱 앱",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p electron",
    "build:app": "npm run build && electron-builder",
    "build:app:win": "npm run build && electron-builder --win",
    "build:app:dir": "npm run build && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps || true",
    "rebuild": "@electron/rebuild -f -w better-sqlite3",
    "preview": "vite preview",
    "clean": "rimraf dist dist-electron release"
  },
  "keywords": [
    "electron",
    "react",
    "foldering",
    "notes"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "@electron/rebuild": "^3.6.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "@tailwindcss/typography": "^0.5.10",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0",
    "rimraf": "^5.0.5"
  },
  "build": {
    "appId": "com.foldering.app",
    "productName": "Foldering App",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "extraFiles": [],
    "extraResources": [],
    "asar": true,
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "compression": "maximum",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "sign": null,
      "signDlls": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false
  }
}

